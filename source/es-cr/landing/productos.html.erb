---
title: Productos de BAC | Credomatic
layout: splash
---
<div class="title-container">
  <h2>¿Qué estás buscando?</h2>
</div>

<ul class="productos">
  <% data.splash.productos.each do |producto| %>
    <li>
      <a href="<%= producto.link %>">
        <%= image_tag "/images/#{producto.icono}", :class => 'icono-producto' %>
        <%= producto.titulo %>
      </a>
    </li>
  <% end %>
</ul>

<a href="#footer" class="explora-btn arrow-btn" id="explora-btn-footer">Explorá más productos</a>

<% content_for :offcanvas do %>
  <ul>
    <% data.splash.links_menu.each_with_index do |item, index| %>
      <li class="con-icono<%= " borde-superior" if index == data.splash.links_menu.size - 2 %>">
        <a href="<%= item.link %>" onclick="ga('send', 'event', '<%=  data.splash.event_category %>', 'offcanvas', '<%= item.titulo %>');">
          <div class="icono-offcanvas">
            <%= image_tag "/images/#{item.icono}", :class => 'icono-offcancas' %>
          </div>
          <%= item.titulo %>
        </a>
      </li>
    <% end %>
  </ul>
<% end %>
