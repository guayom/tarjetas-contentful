            <img class="image-tab" src="<%= producto[1]['variacion'][0]['arte']['url'] unless producto[1]['variacion'][0]['arte'].nil? %>?w=350" alt="" />
          </div>
        <% end %>
      </div>
      <div class="col-xs-12 col-sm-6 col-md-5 col-md-push-2">
        <h2>Tarjetas de supermercados</h2>
        <p><%= get_category_description('supermercados') %></p>
