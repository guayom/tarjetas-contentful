<div class="filters-outer-container">
  <div class="filters-container inicial">
    <div class="filters-content">
      <div class="filter-row">
        <div class="filter-title">
          <h2>Elegí el beneficio <span>y solicitá la tuya</span></h2>
        </div>
      </div>
      <div class="category-filters filter-row">
        <div class="filter-item" data-category="supermercados">
          <%= image_tag 'cr-icono-supermercado-solid.svg', :width => "30" %>
          Tarjetas para <span class="bigger">Supermercados</span>
        </div>
        <div class="filter-item" data-category="viajes">
          <%= image_tag 'cr-icono-viajes-avion-solid.svg', :width => "30" %>
          Tarjetas para <span class="bigger">Viajes</span>
        </div>
        <div class="filter-item" data-category="cashback">
          <%= image_tag 'cr-icono-cashback-solid.svg', :width => "30" %>
          Tarjetas de <span class="bigger">Cashback</span>
        </div>
        <div class="filter-item" data-category="otras">
          <%= image_tag 'cr-icono-otras-solid.svg', :width => "30" %>
          Otras <span class="bigger">Tarjetas</span>
        </div>
      </div>
      <div class="ver-mas-beneficios-btn">
        <button>Ver más beneficios</button>
      </div>
      <div class="benefit-filters filter-row">
        <% data.filters.benefitFilters.each do |filter| %>
          <div class="filter-item" data-category="supermercados">
            <div class="filter-item-image-container">
              <%= image_tag filter.icon, :width => "65" %>
            </div>
            <div class="filter-item-title-container">
              <%= filter.title %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
