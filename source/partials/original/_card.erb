<%
@tarjeta = data.tarjetas.productos.find{|t| t[1]['titulo'] == tarjeta[0] }[1]
@form = @tarjeta['formOpa'].present? ? @tarjeta['formOpa'] : @tarjeta['form']
%>

<%# Aquí hice que se le agregue "de Credomatic" a la tarjeta Club Nación para que la caja sea del mismo tamaño que las de a la par %>
<h4><% if tarjeta[3].nil? %>Tarjeta <%= @tarjeta['titulo'] %><%= " de Credomatic" if @tarjeta['titulo'] == "Club La Nación"%><% else %><%= tarjeta[3] %><% end %></h4>
<% unless @tarjeta['variacion'].nil? %>
  <a href="javascript:void(0);" class="card-image">
    <img src="<%= @tarjeta['variacion'][0]['arte']['url'] %>?w=240" alt="Tarjeta <%= @tarjeta['titulo'] %>" />
  </a>
<% end %>
<p class="oneliner"><%= tarjeta[1] %></p>
<p>
<% unless @tarjeta['variacion'].nil? %>
  <% if formato == "ingreso-minimo" %>
     <%= "<strong>Ingreso mínimo requerido</strong>: &#8353;".html_safe + number_with_delimiter(@tarjeta.variacion[0]['color']['salarioMinimo'].to_i, :delimiter => '.').to_s %>
  <% else %>
    <%= tarjeta[2] %>
  <% end %>
<% end %>
</p>

<div class="mas-info-container">
  <div class="beneficios">
    <h3>Beneficios Generales</h3>
    <% unless @tarjeta['beneficiosGenerales'].nil? %>
      <ul>
        <% @tarjeta['beneficiosGenerales'].each do |beneficio| %>
          <li><%= beneficio.titulo %></li>
        <% end %>
      </ul>
    <% end %>
  </div>

  <%= link_to "Ver toda la información de esta tarjeta >>", @tarjeta['productPage'], :class => "ir-a-product-page", "data-ga_category": "lp tarjetas - 2017 v3", "data-ga_action": "Ir a product page", "data-ga_label": @tarjeta['titulo'], :target => "_blank" %>
</div>

<%= link_to "información", "javascript:void(0);", :class => "btn-ghost mas-info-btn", "data-ga_category": "lp tarjetas - 2017 v3", "data-ga_action": "Más info", "data-ga_label": @tarjeta['titulo'] %>

<%= link_to "Solicitala aquí", @form, :class => "btn", "data-ga_category": "lp tarjetas - 2017 v3", "data-ga_action": "Solicitar - product block", "data-ga_label": @tarjeta['titulo'] %>
