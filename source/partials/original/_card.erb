<%
@t = data.tarjetas.productos.find{|t| t[1]['titulo'] == tarjeta[0] }
@tarjeta = @t == nil ? nil : @t[1]
if @tarjeta == nil
  @form = "ninininininni"
else
  @form = @tarjeta['formOpa'].present? ? @tarjeta['formOpa'] : @tarjeta['form']
end
%>

<% if @tarjeta == nil %>
<h1>lhljhljhljh</h1>
<% else %>

<%# Aquí hice que se le agregue "de Credomatic" a la tarjeta Club Nación para que la caja sea del mismo tamaño que las de a la par %>
<h4><% if tarjeta[3].nil? %>Tarjeta <%= @tarjeta['titulo'] %><%= " de Credomatic" if @tarjeta['titulo'] == "Club La Nación"%><% else %><%= tarjeta[3] %><% end %></h4>
<% unless @tarjeta['variacion'].nil? %>
  <a href="javascript:void(0);" class="card-image">
    <img src="<%= @tarjeta['variacion'][0]['arte']['url'] %>?w=240" alt="Tarjeta <%= @tarjeta['titulo'] %>" />
  </a>
<% end %>
<p class="oneliner"><%= tarjeta[1] %></p>

<div class="mas-info-container">
  <div class="beneficios">
    <h3>Beneficios Generales</h3>
    <% unless @tarjeta['beneficiosGenerales'].nil? %>
      <ul>
        <% @tarjeta['beneficiosGenerales'].each do |beneficio| %>
          <li><%= beneficio.titulo %></li>
        <% end %>
      </ul>
    <% end %>
    <p>
    <% unless @tarjeta['variacion'].nil? %>
      <% if formato == "ingreso-minimo" %>
        <% salario_minimo_requerido = @tarjeta['titulo'] == "Auto Mercado" ? 331500 : @tarjeta.variacion[0]['color']['salarioMinimo'] %>
         <%= "<strong>Ingreso mínimo requerido</strong>: &#8353;".html_safe + number_with_delimiter(salario_minimo_requerido.to_i, :delimiter => '.').to_s %>
      <% else %>
        <%= tarjeta[2] %>
      <% end %>
    <% end %>
    </p>
  </div>

  <%= link_to "Ver toda la información de esta tarjeta >>", @tarjeta['productPage'], :class => "ir-a-product-page", :onClick => "ga('send', 'event', 'lp tarjetas - 2017 v3', 'Ir a product page', '#{@tarjeta['titulo']}');", :target => "_blank" %>
</div>

<%= link_to "beneficios", "javascript:void(0);", :class => "btn-ghost mas-info-btn", "data-tarjeta" => @tarjeta['titulo'] %>

<%= link_to "Solicitala aquí", @form, :class => "btn", :onClick => "ga('send', 'event', 'lp tarjetas - 2017 v3', 'Solicitar - product block', '#{@tarjeta['titulo']}');"  %>

<% end %>
